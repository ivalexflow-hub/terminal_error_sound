{
  "name": "sanjeevnode-terminal-error-sound",
  "displayName": "Funny Terminal Error Sound",
  "description": "Plays sound when terminal command fails",
  "publisher": "sanjeevnode",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjeevnode/terminal_error_sound"
  },
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-error-sound.testSound",
        "title": "Test Sound",
        "category": "Terminal Error Sound"
      }
    ],
    "configuration": {
      "title": "Terminal Error Sound",
      "properties": {
        "terminalErrorSound.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Play a sound whenever a terminal command exits with a non-zero exit code."
        },
        "terminalErrorSound.soundPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to a custom sound file (MP3/WAV). Leave empty to use the bundled error sound."
        },
        "terminalErrorSound.playOnUnknownExitCode": {
          "type": "boolean",
          "default": false,
          "description": "Also play the sound when the exit code is unknown (e.g. Ctrl+C or sub-shell exit)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "sound-play": "^1.1.0"
  }
}
